{% extends 'layoutAdminDefault.html.twig' %}
{% block content_app_body %}
    <div class="app-body">
        <div class="magic-layout">
            <div id="panel" class="panel panel-default magic-element width-full">
                <div class="panel-heading">
                    <div class="panel-icon"><i class="icon ion-ios7-upload-outline"></i></div>
                    <div class="panel-actions">
                        <a role="button" data-refresh="#panel" title="refresh" class="btn btn-sm btn-icon">
                            <i class="icon ion-refresh"></i>
                        </a>
                        <a role="button" data-expand="#panel" title="expand" class="btn btn-sm btn-icon">
                            <i class="icon ion-arrow-resize"></i>
                        </a>
                    </div><!-- /panel-actions -->
                    <h3 class="panel-title">Bill list</h3>
                </div><!-- /panel-heading -->
                <div class="table-responsive">
                    <table class="table table-hover datatables">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Bill ID</th>
                                <th>Customer</th>
                                <th>Date Order</th>
                                <th>Total</th>
                                <th>Create At</th>
                                <th>Updated At</th> 
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set count = 0 %}
                            {% for bill in bills %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('bill_show', { 'id': bill.id }) }}">{{ bill.id|generateId() }}</a></td>
                                    <td>{{ bill.customer.name }}</td>
                                    <td>{% if bill.dateOrder %}{{ bill.dateOrder|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ bill.total|number_format(0, '.', ',') }}</td>
                                    <td>{% if bill.createdAt %}{{ bill.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if bill.updatedAt %}{{ bill.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-ion btn-primary" href="{{ path('bill_new') }}">Add</a>
                                            <a class="btn btn-ion btn-success" href="{{ path('bill_edit', { 'id': bill.id }) }}">Edit</a>
                                            <a href="{{ path('bill_delete', {'id': bill.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-ion btn-danger btn-delete">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                         </tbody>
                    </table>
                    {% if(bills|length == 0) %}
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-primary" href="{{ path('bill_new') }}">Add New</a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div><!-- /panel -->
        </div>
    </div><!-- /app body -->
{% endblock %}
