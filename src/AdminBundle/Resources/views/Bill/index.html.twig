{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Bill List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Bill ID</th>
                                <th>Customer</th>
                                <th>Date Order</th>
                                <th>Total</th>
                                <th>Create At</th>
                                <th>Updated At</th> 
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for bill in bills %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('bill_show', { 'id': bill.id }) }}">{{ bill.id|generateId() }}</a></td>
                                    <td>{{ bill.customer.name }}</td>
                                    <td>{% if bill.dateOrder %}{{ bill.dateOrder|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ bill.total|number_format(0, '.', ',') }}</td>
                                    <td>{% if bill.createdAt %}{{ bill.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if bill.updatedAt %}{{ bill.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('bill_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('bill_edit', { 'id': bill.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('bill_delete', {'id': bill.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </section>
                    {% if(bills|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('bill_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}
