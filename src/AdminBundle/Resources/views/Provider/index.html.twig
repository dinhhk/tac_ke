{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Provider List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for provider in providers %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('provider_show', { 'id': provider.id }) }}">{{ provider.name }}</a></td>
                                    <td>{{ provider.email }}</td>
                                    <td>{{ provider.address }}</td>
                                    <td>{{ provider.phoneNumber }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('provider_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('provider_edit', { 'id': provider.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('provider_delete', {'id': provider.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </section>
                    {% if(providers|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('provider_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}