{% extends 'layoutAdminDefault.html.twig' %}
{% block content_app_body %}
    <div class="app-body">
        <div class="magic-layout">
            <div class="box magic-element width-full">
                <h2 class="box-heading">
                    <div class="btn-group pull-right">
                        <a href="#" role="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown">
                            <i class="icon ion-ios7-arrow-down"></i>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a class="form-theme" data-toggle="default" href="#">Default</a></li>
                            <li><a class="form-theme" data-toggle="flat" href="#">Flat</a></li>
                            <li><a class="form-theme" data-toggle="ion" href="#">Ion</a></li>
                            <li class="divider"></li>
                            <li><a class="form-theme" data-toggle="flat-ion" href="#">Flat & Ion</a></li>
                            <li class="divider"></li>
                            <li><a class="form-theme" data-toggle="disabled-fieldset" href="#">Toggle Disable</a></li>
                        </ul>
                    </div>
                    Provider Creation
                </h2>

                {{ form_start(form, {'attr': {'class': 'form-validate form-horizontal', 'novalidate': 'novalidate'}}) }}
                    {{ form_widget(form._token) }}

                    {% set _class = 'form-group' %}
                        {% if not form.name.vars.valid %}
                        {% set _class = 'form-group has-error' %}
                    {% endif %}
                    <div class="{{ _class }}">
                        <label for="cname" class="control-label col-lg-2">Name <span class="required">*</span></label>
                        <div class="col-lg-10">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    {% set _class = 'form-group' %}
                        {% if not form.email.vars.valid %}
                        {% set _class = 'form-group has-error' %}
                    {% endif %}
                    <div class="{{ _class }}">
                        <label for="cemail" class="control-label col-lg-2">Email <span class="required">*</span></label>
                        <div class="col-lg-10">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    {% set _class = 'form-group' %}
                        {% if not form.address.vars.valid %}
                        {% set _class = 'form-group has-error' %}
                    {% endif %}
                    <div class="{{ _class }}">
                        <label for="caddress" class="control-label col-lg-2">Address <span class="required">*</span></label>
                        <div class="col-lg-10">
                            {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                            {{ form_errors(form.address) }}
                        </div>
                    </div>

                    {% set _class = 'form-group' %}
                        {% if not form.phoneNumber.vars.valid %}
                        {% set _class = 'form-group has-error' %}
                    {% endif %}
                    <div class="{{ _class }}">
                        <label for="cphonenumber" class="control-label col-lg-2">Phone number <span class="required">*</span></label>
                        <div class="col-lg-10">
                            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="cnote" class="control-label col-lg-2">Note</label>
                        <div class="col-lg-10">
                            {{ form_widget(form.note, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input class="btn btn-primary" type="submit" value="Create">
                            <a class="btn btn-default" href="{{ path('provider_index') }}">Back to the list</a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div><!-- /box -->
        </div><!-- /magic-layout -->
    </div><!-- /app body -->
{% endblock %}
