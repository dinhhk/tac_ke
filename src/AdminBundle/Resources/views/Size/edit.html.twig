{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Size Edit
                        </header>
                        <div class="panel-body">
                            <div class="form">

                                {{ form_start(edit_form, {'attr': {'class': 'form-validate form-horizontal', 'novalidate': 'novalidate'}}) }}
                                    {{ form_widget(edit_form._token) }}
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">Name <span class="required">*</span></label>
                                        {% set _class = 'form-control' %}
                                        {% if not edit_form.name.vars.valid %}
                                          {% set _class = 'form-control error' %}
                                        {% endif %}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.name, {'attr': {'class': _class}}) }}
                                            {{ form_errors(edit_form.name) }}
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cdescription" class="control-label col-lg-2">Description</label>
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <input class="btn btn-primary" type="submit" value="Edit">
                                            <a class="btn btn-default" href="{{ path('size_index') }}">Back to the list</a>
                                        </div>
                                    </div>
                                {{ form_end(edit_form) }}

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
