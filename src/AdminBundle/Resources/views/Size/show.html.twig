{% extends 'base.html.twig' %}

{% block body %}
    <h1>Size</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ size.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ size.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ size.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('size_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('size_edit', { 'id': size.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
