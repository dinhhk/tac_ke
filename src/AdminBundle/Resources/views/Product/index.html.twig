{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Product List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Type</th>
                                <th>Size</th>
                                <th>Unit</th> 
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for product in products %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td>{{ count }}</td>
                                    {% set image = 'https://www.oatey.com//ASSETS/IMAGES/ITEMS/DETAIL_PAGE/NoImage.png' %}
                                    {% if product.image is not empty %}
                                        {% set image = asset(product.image) %}
                                    {% endif %}
                                    <td><img src="{{ image }}" width="50" height="50" /></td>
                                    <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</td>
                                    <td>{{ product.price|number_format(0, '.', ',') }}</td>
                                    <td>{{ product.type.name }}</td>
                                    <td>{{ product.size.name }}</td>
                                    <td>{{ product.unit.name }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('product_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('product_edit', { 'id': product.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('product_delete', {'id': product.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    </section>
                    {% if(products|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('product_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}