{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Type list
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for type in types %}
                                {% set count = count + 1 %}
                                <tr type_id='{{ type.id }}'>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('type_show', { 'id': type.id }) }}">{{ type.name }}</a></td>
                                    <td>{{ type.description }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('type_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('type_edit', { 'id': type.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('type_delete', {'id': type.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>     
                            {% endfor %}
                        </table>
                    </section>
                    {% if(types|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('type_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}