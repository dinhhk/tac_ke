{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Unit List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for unit in units %}
                                {% set count = count + 1 %}
                                <tr unit_id='{{ unit.id }}'>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('unit_show', { 'id': unit.id }) }}">{{ unit.name }}</a></td>
                                    <td>{{ unit.description }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('unit_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('unit_edit', { 'id': unit.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('unit_delete', {'id': unit.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </section>
                    {% if(units|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('unit_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function(){
            $("table tr").not(':first').each(function() {
                var unit_id = $(this).attr("unit_id");
                var form = $('.form-delete-' + unit_id);
                var url = form.attr('action').replace(':USER_ID', unit_id);
                form.attr('action', url);
            })
        });
    </script> 
{% endblock %}