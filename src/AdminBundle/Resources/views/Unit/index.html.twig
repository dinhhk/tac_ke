{% extends 'layoutAdminDefault.html.twig' %}
{% block content_app_body %}
    <div class="app-body">
        <div class="magic-layout">
            <div id="panel" class="panel panel-default magic-element width-full">
                {% include 'partials/admin/panel_heading.html.twig' with {'panel_heading_title': 'Unit list'} %}
                <div class="table-responsive">
                    <table class="table table-hover datatables">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set count = 0 %}
                            {% for unit in units %}
                                {% set count = count + 1 %}
                                <tr unit_id='{{ unit.id }}'>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('unit_show', { 'id': unit.id }) }}">{{ unit.name }}</a></td>
                                    <td>{{ unit.description }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-ion btn-primary" href="{{ path('unit_new') }}">Add</a>
                                            <a class="btn btn-ion btn-success" href="{{ path('unit_edit', { 'id': unit.id }) }}">Edit</a>
                                            <a href="{{ path('unit_delete', {'id': unit.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-ion btn-danger btn-delete">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% if(units|length == 0) %}
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-primary" href="{{ path('unit_new') }}">Add New</a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div><!-- /panel -->
        </div>
    </div><!-- /app body -->
{% endblock %}