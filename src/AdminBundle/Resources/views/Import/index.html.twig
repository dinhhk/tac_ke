{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Import List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Import ID</th>
                                <th>Provider</th>
                                <th>Date Order</th>
                                <th>Total</th>
                                <th>Create At</th>
                                <th>Updated At</th> 
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for import in imports %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td>{{ count }}</td>
                                    <td><a href="{{ path('import_show', { 'id': import.id }) }}">{{ import.id|generateId() }}</a></td>
                                    <td>{{ import.provider.name }}</td>
                                    <td>{% if import.dateOrder %}{{ import.dateOrder|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ import.total|number_format(0, '.', ',') }}</td>
                                    <td>{% if import.createdAt %}{{ import.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if import.updatedAt %}{{ import.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('import_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('import_edit', { 'id': import.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('import_delete', {'id': import.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </section>
                    {% if(imports|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('import_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}
