{% extends 'layoutAdminDefault.html.twig' %}
{% block content_app_body %}
    <div class="app-body">
        <div class="magic-layout">
            <div class="box magic-element width-full">
                {% include 'partials/admin/messages.html.twig' %}
                {% include 'partials/admin/box_heading.html.twig' with {'box_heading_title': 'Import Edit'} %}
                {% set _disabled = '' %}
                {% set _verified = '' %}
                {% if edit_form.vars.value.verified == true %}
                    {% set _verified = 'verified' %}
                    {% set _disabled = 'disabled' %}
                {% endif %}
                {{ form_start(edit_form, {'attr': {'class': 'form-validate form-horizontal', 'novalidate': 'novalidate', 'role': 'form'}}) }}
                    <fieldset {{ _disabled }}>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-9 col-md-9 col-sm-9">
                                    <div class="row row-mb-5">
                                        <div class="col-md-6">
                                            {{ form_label(edit_form.provider, 'Provider') }}
                                            
                                            <div class="input-group" style="margin-left: 0px">
                                                {% set _class = 'form-control' %}
                                                {% if not edit_form.provider.vars.valid %}
                                                    {% set _class = 'form-control error' %}
                                                {% endif %}
                                                {{ form_widget(edit_form.provider, {'attr': {'class': _class, 'disabled': 'disabled'}}) }}
                                                <div class="input-group-addon">
                                                    <span class="icon ion-ios7-plus-empty"></span>
                                                </div>
                                            </div>

                                            {{ form_errors(edit_form.provider) }}
                                        </div>

                                        <div class="col-md-6">
                                            {{ form_label(edit_form.import_details.vars.prototype.product, 'Product') }}
                                            
                                            <div class="input-group">
                                                {% set _class = 'form-control form-flat' %}
                                                {% if edit_form.import_details.__name__.product.vars.valid is defined and edit_form.import_details.__name__.product.vars.valid == FALSE %}
                                                    {% set _class = 'form-control error' %}
                                                {% endif %}
                                                {% if edit_form.import_details.children.__name__.product is defined %}
                                                    {{ form_widget(edit_form.import_details.children.__name__.product, {'attr': {'class': _class}}) }}
                                                {% else %}
                                                    {{ form_widget(edit_form.import_details.vars.prototype.product, {'attr': {'class': _class}}) }}
                                                {% endif %}
                                                <div class="input-group-addon">
                                                    <span class="icon ion-ios7-plus-empty"></span>
                                                </div>
                                            </div>

                                            {% if edit_form.import_details.__name__.product is defined %}
                                                {{ form_errors(edit_form.import_details.__name__.product) }} 
                                            {% endif %}
                                        </div>
                                    </div>
                                    

                                    <div class="row row-mb-5">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.import_details.vars.prototype.quantity, 'Quantity') }}
                                            <div class="input-group" style="margin-left: 0px">
                                                {% set _class = 'form-control number-input quantity' %}
                                                {% if edit_form.import_details.__name__.quantity.vars.valid is defined and edit_form.import_details.__name__.quantity.vars.valid == FALSE %}
                                                    {% set _class = 'form-control number-input quantity error' %}
                                                {% endif %}
                                                {% if edit_form.import_details.children.__name__.quantity is defined %}
                                                    {{ form_widget(edit_form.import_details.children.__name__.quantity, {'attr': {'class': _class}}) }}
                                                {% else %}
                                                    {{ form_widget(edit_form.import_details.vars.prototype.quantity, {'attr': {'class': _class}}) }}
                                                {% endif %}

                                                {% if edit_form.import_details.__name__.quantity is defined %}
                                                    {{ form_errors(edit_form.import_details.__name__.quantity) }} 
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            {{ form_label(edit_form.import_details.vars.prototype.unitPrice, 'Unit Price') }}
                                            <div class="input-group">
                                                {% set _class = 'form-control number-input unit-price' %}
                                                {% if edit_form.import_details.__name__.unitPrice.vars.valid is defined and edit_form.import_details.__name__.unitPrice.vars.valid == FALSE %}
                                                    {% set _class = 'form-control number-input unit-price error' %}
                                                {% endif %}
                                                {% if edit_form.import_details.children.__name__.unitPrice is defined %}
                                                    {{ form_widget(edit_form.import_details.children.__name__.unitPrice, {'attr': {'class': _class}}) }}
                                                {% else %}
                                                    {{ form_widget(edit_form.import_details.vars.prototype.unitPrice, {'attr': {'class': _class}}) }}
                                                {% endif %}
                                                
                                                {% if edit_form.import_details.__name__.unitPrice is defined %}
                                                    {{ form_errors(edit_form.import_details.__name__.unitPrice) }} 
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <label for="admin_import_price">Total</label>
                                            <input id="admin_import_price" name="admin_import_price" class="form-control" type="text" readonly="readonly">
                                        </div>
                                    </div>
                                    
                                    <div class="row row-mb-5">
                                        <div class="col-md-6">
                                            {{ form_label(edit_form.note, 'Note') }}
                                            {{ form_widget(edit_form.note, {'attr': {'class': 'form-control col-xs-12', 'rows': 3, 'readonly': 'readonly', 'style': "margin-left: 0px"}}) }}
                                            {{ form_errors(edit_form.note) }}
                                        </div>

                                        <div class="col-md-6">
                                            {{ form_label(edit_form.payment, 'Payment') }}
                                            {{ form_widget(edit_form.payment, {'attr': {'class': 'form-control', 'rows': 3, 'readonly': 'readonly'}}) }}
                                            {{ form_errors(edit_form.payment) }}
                                        </div>  
                                    </div>
                                      
                                    <div class="row row-mb-5">
                                        <div class="col-md-12 hidden">
                                            {{ form_label(edit_form.total, 'Total') }}
                                            {% set _class = 'form-control' %}
                                            {% if not edit_form.total.vars.valid %}
                                                {% set _class = 'form-control error' %}
                                            {% endif %}
                                            {{ form_widget(edit_form.total, {'attr': {'class': _class, 'readonly': 'readonly'}}) }}
                                            {{ form_errors(edit_form.total) }}
                                        </div>  
                                    </div>
                                </div>
                      
                                <div class="col-lg-3 col-md-3 col-sm-3" style="padding-top:20px">
                                    <div class="form-group">
                                        <img id="product_image" height="210" width="210" src="#" />
                                    </div>
                                </div>
                            </div>
                        </div>
                  
                        <div class="row">
                            <div class="col-lg-12">
                                <button id="add_import_detail" class="btn btn-primary" type="submit" name="add">Add</button>
                                <button id="update_import_detail" class="btn btn-success" type="submit" name="update" disabled="disabled">Update</button>
                                <a id="reset_import_detail" class="btn btn-info" href="{{ path('import_edit', {'id': edit_form.vars.value.id }) }}" disabled="disabled">Reset</a>
                                <button id="verified_import_detail" class="btn btn-warning" type="submit" name="verified">Verified</button>
                                <a class="btn btn-default" href="{{ path('import_index') }}">Back to the list</a>
                            </div>
                        </div>
                        {{ form_widget(edit_form.import_details, {'attr': {'class': 'hidden'}}) }}
                    </fieldset>
                    
                {{ form_end(edit_form) }} 

                <fieldset {{ _disabled }}>
                    <div id="demo-variant" class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-icon"><i class="icon ion-navicon-round"></i></div>
                            <div class="panel-actions">
                                <div class="input-group">
                                    <strong>TOTAL PRICE:</strong> <span class="text-info total">{{ edit_form.vars.value.total|number_format(0, '.', ',') }} VNĐ </span> | 
                                    <strong>TOTAL ROWS:</strong> <span class="text-info rows">{{ pagination.getTotalItemCount }}</span>
                                </div>
                            </div><!-- /panel-actions -->
                            <h3 class="panel-title">Import Details</h3>
                        </div>
                        <table class="table table-bordered table-hover {{ _verified }}">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Provider</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% set count = 0 %}
                                {% for import_detail in edit_form.import_details.children %}
                                {% set count = count + 1 %}
                                {% if import_detail.vars.value.id is defined and import_detail.vars.value.id is not null %}
                                <tr data-import-detail-id="{{ import_detail.vars.value.id }}">
                                    <td>
                                       {{ count }}     
                                    </td>
                                    <td class="provider-name">
                                        {% if edit_form.provider.vars.data.name is defined %}
                                            {{ edit_form.provider.vars.data.name }}
                                        {% endif %}
                                    </td>
                                    <td class="product-name" data-product-id="{{ import_detail.product.vars.data.id }}">
                                        {% if import_detail.product.vars.data.name is defined %}
                                            {{ import_detail.product.vars.data.name }}
                                        {% endif %}
                                    </td>
                                    <td class="quantity text-right">
                                        {% if import_detail.quantity.vars.value is defined %}
                                            {{ import_detail.quantity.vars.value|number_format(0, '.', ',') }}
                                        {% endif %}
                                    </td>
                                    <td class="unit-price text-right">
                                        {% if import_detail.unitPrice.vars.value is defined %}
                                            {{ import_detail.unitPrice.vars.value|number_format(0, '.', ',') }}
                                        {% endif %}
                                    </td>
                                    <td class="total text-right">
                                        {% if import_detail.quantity.vars.value is defined and import_detail.unitPrice.vars.value is defined %}
                                            {{ (import_detail.quantity.vars.value * import_detail.unitPrice.vars.value)|number_format(0, '.', ',') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ form_start(delete_form, {'attr': {'id': 'form-delete'|default('form')}} ) }}
                                        <div class="btn-group">
                                            <input class="btn btn-ion btn-danger btn-delete" type="button" value="Delete">
                                            <input class="btn btn-ion btn-success edit-product-detail" type="button" data-product-detail-id="{{ import_detail.vars.value.id }}" value="Edit">
                                        </div>
                                        {{ form_end(delete_form) }}
                                    </td>
                                </tr>
                                {% endif %}
                                {% endfor %}
                            </tbody>
                        </table><!-- /table -->
                        <div class="panel-footer">
                            Text on footer
                            <div class="navigation" align="center">{{ knp_pagination_render(pagination) }}</div>
                        </div>
                    </div><!-- /panel-default -->
                </fieldset>
            </div><!-- /box -->
        </div><!-- /magic-layout -->
    </div><!-- /app body -->


{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('public/assets/bootbox/bootbox.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        addProductInfoByAjax();
    });

    $( "#admin_import_import_details___name___product" ).change(function() {
        addProductInfoByAjax();
    });

    function addProductInfoByAjax() {
        var id = $("#admin_import_import_details___name___product option:selected").val();
        $.ajax({
            url: "/admin/product/info",
            type: "POST",
            data: { id : id },
            dataType: 'json',
            success: function(data) {
                if(data.status == 1) {
                    var image = !data.product.image ? 'https://www.oatey.com/ASSETS/IMAGES/ITEMS/DETAIL_PAGE/NoImage.png' : '/' + data.product.image;
                    $('#product_image').attr('src', image);
                }
            },
            error: function (xhr, status, error) {
                //console.log(xhr.responseText);
            }
        });
    }

    $(document).ready(function() {
        $('.number-input.quantity').keyup(function(e) { 
            if(e.keyCode == 9 || (e.keyCode >= 48 && e.keyCode <=57) || (e.keyCode >= 96 && e.keyCode <=105)) { 
                $('#admin_import_price').val(calculatePrice());
                return;
            }
            $('.number-input.quantity').val('');
            $('#admin_import_price').val(calculatePrice());
        });

        $('.number-input.unit-price').keyup(function(e) { 
            if(e.keyCode == 9 || (e.keyCode >= 48 && e.keyCode <=57) || (e.keyCode >= 96 && e.keyCode <=105)) { 
                $('#admin_import_price').val(calculatePrice());
                return;
            }
            $('.number-input.unit-price').val('');
            $('#admin_import_price').val(calculatePrice());
        });

        $('.table-hover tr').click(function(e) {
            $('.table-hover tr').removeClass('table-hover-highlighted');
            $(this).addClass('table-hover-highlighted');
        });

        $('.edit-product-detail').click(function(event) {    
            event.preventDefault();         
            var tr = $(this).closest('tr');
            var product_id = parseInt(tr.find('.product-name').attr('data-product-id'));
            var quantity = parseInt(tr.find('.quantity').text().replace(/\s/g, "").replace(",", ""));
            var unitPrice = parseInt(tr.find('.unit-price').text().replace(/\s/g, "").replace(",", ""));
            
            $('#admin_import_import_details___name___quantity').val(quantity);
            $('#admin_import_import_details___name___unitPrice').val(unitPrice);
            $('#admin_import_import_details___name___product').val(product_id).change();

            $("#add_import_detail").prop("disabled", true);
            $("#verified_import_detail").prop("disabled", true);

            $("#admin_import_note").removeAttr("readonly");
            $("#admin_import_payment").removeAttr("readonly");

            $("#admin_import_provider").removeAttr("disabled");
            $("#update_import_detail").removeAttr("disabled");
            $("#reset_import_detail").removeAttr("disabled");
        
            $('#admin_import_price').val(calculatePrice());
        });

        $('form').submit(function(e) {
            $(':disabled').each(function(e) {
                if($.inArray(this.id, ['add_import_detail', 'update_import_detail', 'reset_import_detail', 'verified_import_detail']) == -1) {
                    $(this).removeAttr('disabled');
                }
            })
        });

        $(document).ready(function(){
            $('.btn-delete').on('click', function(e){
                e.preventDefault();
                var row = $(this).parents('tr');
                bootbox.confirm("Are you sure?", function(result) {
                    if(result == true) {
                        var id = row.data('import-detail-id');                
                        var form = $('#form-delete');                
                        var url = form.attr('action').replace(':IMPORT_DETAIL_ID', id);
                        var data = form.serialize();                        
                        $.post(url, data, function(result){
                            var status = result.removed;
                            if(status == 1)
                            {
                                //row.fadeOut();  
                                //var total = parseInt(result.total);
                                //var rows = parseInt($('.text-info.rows').text()) - 1;
                                //$('.text-info.total').text(total.toLocaleString('en') + ' VNĐ');
                                //$('.text-info.rows').text(rows.toLocaleString('en'));
                                addProductInfoByAjax();
                                location.reload();
                            }
                        }).fail(function(xhr, status, error){
                            console.log(xhr.responseText);
                        });
                    }
                }); 

            })
        });
    });

    function calculatePrice() {
        var quantity = parseInt($('.number-input.quantity').val());
        var unit_price = parseInt($('.number-input.unit-price').val());

        if(unit_price > 0 && quantity > 0) {
            return quantity * unit_price;
        }

        return '';
    }

</script>
{% endblock javascripts %}