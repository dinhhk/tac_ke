{% extends 'layoutAdminDefault.html.twig' %}
{% block body %}
    <section id="main-content">
        <section class="wrapper"> 
            {% include 'partials/admin/messages.html.twig' %}
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Customer List
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Phone Number</th> 
                                <th>Actions</th>
                            </tr>
                            {% set count = 0 %}
                            {% for customer in customers %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                                    <td>{{ customer.name }}</td>
                                    <td>{{ customer.gender }}</td>
                                    <td>{{ customer.email }}</td>
                                    <td>{{ customer.phoneNumber }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('customer_new') }}"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="{{ path('customer_edit', { 'id': customer.id }) }}"><i class="icon_check_alt2"></i></a>
                                            <a href="{{ path('customer_delete', {'id': customer.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-danger btn-delete"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </section>
                    {% if(customers|length == 0) %}
                    <a class="btn btn-primary" href="{{ path('customer_new') }}">Add New</a>
                    {% endif %}
                </div>
            </div> 
        </section>
    </section>
{% endblock %}
