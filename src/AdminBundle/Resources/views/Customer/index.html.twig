{% extends 'layoutAdminDefault.html.twig' %}
{% block content_app_body %}
    <div class="app-body">
        <div class="magic-layout">
            <div id="panel" class="panel panel-default magic-element width-full">
                <div class="panel-heading">
                    <div class="panel-icon"><i class="icon ion-ios7-people-outline"></i></div>
                    <div class="panel-actions">
                        <a role="button" data-refresh="#panel" title="refresh" class="btn btn-sm btn-icon">
                            <i class="icon ion-refresh"></i>
                        </a>
                        <a role="button" data-expand="#panel" title="expand" class="btn btn-sm btn-icon">
                            <i class="icon ion-arrow-resize"></i>
                        </a>
                    </div><!-- /panel-actions -->
                    <h3 class="panel-title">Customer list</h3>
                </div><!-- /panel-heading -->
                <div class="table-responsive">
                    <table class="table table-hover datatables">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Phone Number</th> 
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set count = 0 %}
                            {% for customer in customers %}
                                {% set count = count + 1 %}
                                <tr>
                                    <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                                    <td>{{ customer.name }}</td>
                                    <td>
                                        {% if customer.gender == 1 %}
                                            Male
                                        {% else %}
                                            Female
                                        {% endif %}
                                    </td>
                                    <td>{{ customer.email }}</td>
                                    <td>{{ customer.phoneNumber }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-ion btn-primary" href="{{ path('customer_new') }}">Add</a>
                                            <a class="btn btn-ion btn-success" href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit</a>
                                            <a href="{{ path('customer_delete', {'id': customer.id }) }}" onclick="confirm('Are you sure?');" class="btn btn-ion btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% if(customers|length == 0) %}
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-primary" href="{{ path('customer_new') }}">Add New</a>
                        </div>
                    </div>
                    {% endif %}
                </div><!-- /.table-responsive -->
            </div><!-- /panel -->
        </div>
    </div><!-- /app body -->
{% endblock %}